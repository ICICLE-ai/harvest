{
    "openapi": "3.0.0",
    "info": {
      "title": "API Documentation",
      "description": "Explore the API endpoints for Project-2, featuring demonstration examples to help guide you through their usage, all built according to OpenAPI v3 specifications.",
      "version": "1.0.0",
      "tags" : ["API"]
    },
    "tags": [
      {
        "name": "Example",
        "description": "Operations related to example endpoints"
      }
    ],
    "paths": {
      "/example": {
        "post": {
          "summary": "Create an example resource",
          "tags": ["Example"], 
          "description": "This endpoint allows creating a new example resource.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the example resource",
                      "example": "Sample Name"
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "description": "User email (required)",
                      "example": "user@example.com"
                    }
                  },
                  "required": ["name", "email"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Resource created successfully"
            },
            "400": {
              "description": "Invalid request body"
            }
          }
        }
      }
    }
}
